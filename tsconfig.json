{
  "compileOnSave": false,
  "compilerOptions": {
   "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "esnext",
      "dom"
    ],
    "paths": {
      "@env/*": ["./env/*"],
      "@minerva/*": ["./src/app/*"],
      "@minerva-admin/*": ["./projects/admin/src/app/*"]
    }
  }
}
